{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://semad-method.dev/schemas/story-workbreakdown.schema.json",
  "title": "Story WorkBreakdown Schema",
  "description": "Machine-checkable work breakdown nested under StoryContract, enabling AC→Task→Test traceability with commands and evidence.",
  "type": "object",
  "required": ["coveragePolicy", "tasks"],
  "properties": {
    "coveragePolicy": {
      "type": "object",
      "properties": {
        "requireTaskForEveryAC": { "type": "boolean" },
        "requireTestForEveryAC": { "type": "boolean" },
        "minTestsPerAC": { "type": "integer", "minimum": 1 },
        "forbidOrphanTasks": { "type": "boolean" },
        "allowedPaths": { "type": "array", "items": { "type": "string" } },
        "forbiddenPaths": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "tasks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "title", "type", "acRefs", "changes", "tests", "acceptance"],
        "properties": {
          "id": { "type": "string", "pattern": "^T-[\\w\\.\\-]+$" },
          "title": { "type": "string", "minLength": 3 },
          "type": { "type": "string", "enum": ["backend", "frontend", "api", "model", "infra", "test", "doc", "chore"] },
          "risk": { "type": "string", "enum": ["low", "med", "high"] },
          "owner": { "type": "string" },
          "reviewers": { "type": "array", "items": { "type": "string" } },
          "acRefs": { "type": "array", "minItems": 1, "items": { "type": "string", "pattern": "^AC-[\\w\\-]+$" } },
          "dependsOn": { "type": "array", "items": { "type": "string", "pattern": "^T-[\\w\\.\\-]+$" } },
          "changes": {
            "type": "object",
            "required": ["files"],
            "properties": {
              "files": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "required": ["path", "action"],
                  "properties": {
                    "path": { "type": "string" },
                    "action": { "type": "string", "enum": ["create", "modify", "move", "delete"] },
                    "reason": { "type": "string" },
                    "to": { "type": "string" },
                    "generateFrom": { "type": "string" }
                  },
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false
          },
          "tests": {
            "type": "object",
            "required": ["mustAdd"],
            "properties": {
              "mustAdd": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "required": ["id", "path", "framework", "covers"],
                  "properties": {
                    "id": { "type": "string", "pattern": "^[A-Z]+-[\\w\\-]+$" },
                    "path": { "type": "string" },
                    "framework": { "type": "string" },
                    "type": { "type": "string" },
                    "covers": { "type": "array", "minItems": 1, "items": { "type": "string", "pattern": "^AC-[\\w\\-]+$" } }
                  },
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false
          },
          "commands": {
            "type": "object",
            "properties": {
              "precheck": { "type": "array", "items": { "type": "string" } },
              "build": { "type": "array", "items": { "type": "string" } },
              "test": { "type": "array", "items": { "type": "string" } },
              "run": { "type": "array", "items": { "type": "string" } }
            },
            "additionalProperties": false
          },
          "evidence": {
            "type": "object",
            "properties": {
              "artifacts": { "type": "array", "items": { "type": "string" } },
              "logs": { "type": "array", "items": { "type": "string" } }
            },
            "additionalProperties": false
          },
          "subtasks": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "description", "outcome"],
              "properties": {
                "id": { "type": "string", "pattern": "^T-[\\w\\.\\-]+$" },
                "description": { "type": "string" },
                "outcome": { "type": "string" }
              },
              "additionalProperties": false
            }
          },
          "acceptance": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["check", "acRefs"],
              "properties": {
                "id": { "type": "string" },
                "check": { "type": "string" },
                "acRefs": { "type": "array", "minItems": 1, "items": { "type": "string", "pattern": "^AC-[\\w\\-]+$" } }
              },
              "additionalProperties": false
            }
          },
          "notes": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}

