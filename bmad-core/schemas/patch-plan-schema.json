{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Patch Plan Schema",
  "type": "object",
  "required": [
    "storyId",
    "version",
    "changes",
    "tests",
    "riskLevel",
    "signature"
  ],
  "properties": {
    "storyId": {
      "type": "string",
      "description": "Story ID this patch plan implements"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the patch plan"
    },
    "bundleId": {
      "type": "string",
      "description": "Task bundle ID this plan operates against"
    },
    "changes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "path",
          "operations",
          "rationale",
          "mappedACs"
        ],
        "properties": {
          "path": {
            "type": "string",
            "description": "File path to be modified"
          },
          "operations": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "type",
                "location",
                "content"
              ],
              "properties": {
                "type": {
                  "enum": [
                    "add",
                    "modify",
                    "delete",
                    "move"
                  ],
                  "description": "Type of operation"
                },
                "location": {
                  "type": "object",
                  "properties": {
                    "line": {
                      "type": "number"
                    },
                    "column": {
                      "type": "number"
                    },
                    "function": {
                      "type": "string"
                    },
                    "class": {
                      "type": "string"
                    },
                    "symbol": {
                      "type": "string"
                    }
                  }
                },
                "content": {
                  "type": "string",
                  "description": "New or modified content"
                },
                "oldContent": {
                  "type": "string",
                  "description": "Original content (for modify/delete operations)"
                }
              }
            }
          },
          "symbols": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Functions, classes, or symbols affected"
          },
          "rationale": {
            "type": "string",
            "minLength": 10,
            "description": "Detailed explanation of why this change is needed"
          },
          "mappedACs": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Acceptance criteria IDs this change satisfies"
          },
          "impact": {
            "type": "object",
            "properties": {
              "breakingChange": {
                "type": "boolean"
              },
              "affectedComponents": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "rollbackPlan": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "tests": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "path",
          "type",
          "description"
        ],
        "properties": {
          "path": {
            "type": "string",
            "description": "Test file path"
          },
          "type": {
            "enum": [
              "unit",
              "integration",
              "e2e",
              "acceptance"
            ],
            "description": "Type of test"
          },
          "description": {
            "type": "string",
            "description": "What the test validates"
          },
          "coveredChanges": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Change paths covered by this test"
          }
        }
      }
    },
    "riskLevel": {
      "enum": [
        "low",
        "medium",
        "high",
        "critical"
      ],
      "description": "Overall risk assessment of the patch"
    },
    "riskMitigation": {
      "type": "object",
      "properties": {
        "backupStrategy": {
          "type": "string"
        },
        "rollbackProcedure": {
          "type": "string"
        },
        "monitoringPoints": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "type",
          "identifier"
        ],
        "properties": {
          "type": {
            "enum": [
              "file",
              "package",
              "service",
              "api"
            ],
            "description": "Type of dependency"
          },
          "identifier": {
            "type": "string",
            "description": "Dependency identifier"
          },
          "version": {
            "type": "string",
            "description": "Required version"
          }
        }
      }
    },
    "signature": {
      "type": "object",
      "required": [
        "signedBy",
        "timestamp"
      ],
      "properties": {
        "signedBy": {
          "type": "string",
          "description": "Agent or user who signed the plan"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "When the plan was signed"
        },
        "checksum": {
          "type": "string",
          "description": "Checksum of the plan content"
        }
      }
    }
  }
}