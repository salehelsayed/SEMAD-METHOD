{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "agents/qa.review_implementation.output.json",
  "title": "QA Review Implementation Output",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "success": { "type": "boolean" },
    "approved": { "type": "boolean" },
    "issues": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "path": { "type": "string" },
          "message": { "type": "string" },
          "severity": { "type": "string", "enum": ["low", "medium", "high"] }
        },
        "required": ["message", "severity"]
      }
    }
  },
  "required": ["success", "approved"]
}

